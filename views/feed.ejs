  <script>
    document.querySelectorAll('.like-button').forEach(button => {
      button.addEventListener('click', () => {
        const post = button.closest('.postagem');
        const counter = post.querySelector('.like-count');
        let currentLikes = parseInt(counter.textContent);
        counter.textContent = currentLikes + 1;
      });
    });
  </script>

  <script>

    // Espera o DOM carregar
    document.addEventListener('DOMContentLoaded', () => {
      const btnPublicar = document.getElementById('btnPublicar');
      const radios = document.querySelectorAll('input[name="destinoPublicacao"]');

      radios.forEach(radio => {
        radio.addEventListener('change', () => {
          if (radio.value === 'oportunidades' && radio.checked) {
            // Muda para laranja
            btnPublicar.classList.add('btn-publicar-oportunidades');
            btnPublicar.classList.remove('btn-custom');
          } else if (radio.value === 'feed' && radio.checked) {
            // Volta para roxo original
            btnPublicar.classList.add('btn-custom');
            btnPublicar.classList.remove('btn-publicar-oportunidades');
          }
        });
      });
    });
  </script>


</body>

