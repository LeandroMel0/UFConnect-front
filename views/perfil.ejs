<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>UFConnect</title>
  <link rel="icon" href="/icons/UFConnect.png" type="image/x-icon"> <!--Icone do site-->
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #0c0c1e;
      color: #fff;
    }

    header {
      background-color: #002f5f;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.4);
    }

    .logo {
      font-size: 24px;
      color: #d000ff;
    }

    .barra-pesquisa {
      border-radius: 50px;
      padding: 0.5rem 1rem;
      border: none;
      width: 100%;
    }

    .sidebar {
      background-color: #121223;
      border-radius: 10px;
      padding: 1rem;
      color: #fff;
    }

    .btn-custom {
      background-color: #a000f0;
      color: white;
      border-radius: 20px;
    }

    .btn-custom:hover {
      background-color: #8e2bb3;
    }

    .btn-red {
      background-color: #ff3b3b;
      /* Vermelho vibrante */
      color: white;
      border-radius: 20px;
    }

    .btn-red:hover {
      background-color: #b11414;
      /* Um tom mais escuro no hover */
    }

    .postagem {
      background-color: #292942;
      border-radius: 10px;
      padding: 1rem;
      margin-top: 1rem;
    }

    .campo-texto {
      border: none;
      border-radius: 10px;
      resize: none;
      width: 100%;
      padding: 0.75rem;
    }

    .imagem-postagem {
      border-radius: 8px;
      margin-top: 10px;
      width: 100%;
    }

    .accordion-button {
      background-color: #1c1c2e;
      color: #fff;
      border-radius: 10px !important;
      box-shadow: none;
      transition: background-color 0.3s ease;
    }

    .accordion-button:not(.collapsed) {
      background-color: #2a2a40;
      color: #fff;
      border-bottom-left-radius: 0 !important;
      border-bottom-right-radius: 0 !important;
    }

    .accordion-body {
      border-top: 1px solid #444;
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
    }

    .accordion-button:focus {
      box-shadow: none;
    }

    .accordion-button::after {
      filter: brightness(0) invert(1);
      /* transforma a seta em branco */
    }

    .perfil-card {
      width: 100%;
      position: relative;
    }

    .posicao-foto-perfil {
      position: absolute;
      top: 35px;
      left: 50%;
      transform: translateX(-50%);
    }

    .foto-perfil {
      width: 60px;
      height: 60px;
      object-fit: cover;
      background-color: #fff;
    }

    .sidebar-links a {
      display: block;
      color: #ffffff;
      text-decoration: none;
      padding: 0.5rem 0.75rem;
      border-radius: 8px;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .sidebar-links a:hover {
      background-color: #a000f0;
      color: #ffffff;
    }

    .btn-invisible {
      background: none;
      border: none;
      color: inherit;
      padding: 0;
      font: inherit;
      display: flex;
      align-items: center;
      gap: 6px;
      transition: all 0.2s ease-in-out;
    }

    .btn-invisible:hover {
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid #b938c2;
      border-radius: 5px;
      cursor: pointer;
      padding: 4px 8px;
    }

    .btn-publicar-oportunidades {
      background-color: #ff7f00;
      /* laranja vibrante */
      color: white;
      border-radius: 20px;
    }

    .btn-publicar-oportunidades:hover {
      background-color: #cc6600;
      /* laranja escuro no hover */
    }

    .btn-white-custom {
      background-color: #ffffff;
      color: #121223;
      border: 1px solid #121223;
      border-radius: 20px;
      font-weight: 500;
      transition: all 0.2s ease-in-out;
    }

    .btn-white-custom:hover {
      background-color: #f0f0f0;
      color: #000;
      border-color: #000;
    }

    .text-purple {
      color: #8e2bb3;
    }

    .border-purple {
      border-color: #8e2bb3 !important;
    }

    .perfil-box {
      background-color: #f7f7f7;
      color: #121223;
    }
  </style>

</head>

<body>
  <!-- HEADER -->
  <header class="fixed-top w-100 py-3 px-4 d-flex justify-content-between align-items-center">
    <img src="/pictures/UFConnect.png" alt="logo" width="150" height="50" class="logo-img align-self-center">
    <div class="input-group" style="width: 700px; margin-left: 1%;">
      <input type="text" class="form-control form-control-sm barra-pesquisa" placeholder="Pesquisar...">
      <button class="btn btn-custom" type="button">
        <img src="/icons/buscar.png" alt="Buscar" width="20" height="20">
      </button>
    </div>
    <nav class="d-flex gap-3 align-items-center">
      <!-- Botão: Início -->
      <button onclick="location.href='/feed'"
        class="btn text-white text-decoration-none d-flex align-items-center gap-2">
        <img src="/icons/inicio.png" alt="Início" width="20" height="20">
        Início
      </button>

      <!-- Botão: Oportunidades -->
      <button onclick="location.href='/feedOpportunities'"
        class="btn text-white text-decoration-none d-flex align-items-center gap-2">
        <img src="/icons/oportunidadesB.png" alt="Oportunidades" width="20" height="20">
        Oportunidades
      </button>


      <!-- Botão: Notificações -->
      <button onclick="location.href='/notificacoes'"
        class="btn text-white text-decoration-none d-flex align-items-center gap-2">
        <img src="/icons/notificacoesB.png" alt="Notificações" width="20" height="20">
        Notificações
      </button>

      <!-- Botão: Perfil -->
      <button id="btnPerfil" class="btn text-white text-decoration-none d-flex align-items-center gap-2"
        onclick="location.href='/perfil/<%= user_id %>'">
        <img src="/icons/perfil.png" alt="Perfil" width="20" height="20">
        Perfil
      </button>

    </nav>
  </header>

  <!-- CONTAINER -->
  <div style="padding-top: 120px;">
    <div class="row justify-content-center">

      <!-- Sidebar esquerda -->
      <aside class="col-lg-3 sidebar me-3" style=" width: 250px; margin-left: 0;">
        <ul class="list-unstyled sidebar-links">
          <li class="mb-2"></li>
          <li>
            <a href="#" class="text-white text-decoration-none d-flex align-items-center">
              <img src="/icons/notificacoes.png" alt="Notificações" width="20" class="me-2">
              Notificações
            </a>
          </li>
          <li>
            <a href="#" class="text-white text-decoration-none d-flex align-items-center">
              <img src="/icons/salvos.png" alt="Itens Salvos" width="20" class="me-2">
              Itens Salvos
            </a>
          </li>
          <li>
            <a href="/feedOpportunities" class="text-white text-decoration-none d-flex align-items-center">
              <img src="/icons/oportunidades.png" alt="Oportunidades" width="20" class="me-2">
              Oportunidades
            </a>
          </li>
          <li>
            <a href="#" class="text-white text-decoration-none d-flex align-items-center">
              <img src="/icons/servicos.png" alt="Serviços UFC" width="20" class="me-2">
              Serviços UFC
            </a>
          </li>
        </ul>

        <div class="d-grid gap-2 mt-3">
          <div class="accordion" id="accordionExample">
            <div class="accordion-item bg-dark text-white border-0 rounded">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed bg-dark text-white rounded d-flex align-items-center gap-2"
                  type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false"
                  aria-controls="flush-collapseOne">

                  <img src="/icons/configuracoes.png" alt="Configurações" width="20" height="20">
                  Configurações
                </button>

              </h2>
              <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body bg-dark rounded-bottom">
                  <a href="#" class="text-white text-decoration-none d-block mb-2"> Editar Perfil</a>
                  <a href="#" class="text-white text-decoration-none d-block"> Sair</a>
                </div>
              </div>
            </div>
          </div>
      </aside>

      <!-- Conteúdo principal -->
      <main class="col-lg-6 d-flex flex-column">

        <!-- Caixa de perfil -->
        <div class="w-100 mb-3 d-flex">
          <div class="card perfil-box shadow rounded-3 w-100 overflow-hidden border-0">

            <!-- Banner do professor -->
            <img src="/pictures/banner.jpg" class="w-100" alt="Banner do professor"
              style="height: 160px; object-fit: cover;">
            <!-- Corpo do card -->
            <div class="p-4 bg-light text-dark position-relative">
              <!-- Foto de perfil sobreposta -->
              <div style="position: absolute; top: -40px; left: 24px;">
                <% if(user_data.avatar_url==null){%>
                  <img src="/pictures/perfil.jpg" alt="Foto de perfil"
                    class="rounded-circle border border-3 border-white shadow"
                    style="width: 100px; height: 100px; object-fit: cover;">
                  <%}else{%>
                    <img src="<%=user_data.avatar_url%>" alt="Foto de perfil"
                      class="rounded-circle border border-3 border-white shadow"
                      style="width: 100px; height: 100px; object-fit: cover;">
                    <%}%>
              </div>

              <!-- Conteúdo -->
              <div class="ps-5 mt-5">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="fw-bold mb-0">
                    <%=user_data.nome%>
                  </h5>
                  <!-- Botão que abre o modal -->
                  <button class="btn btn-outline-info btn-sm rounded-pill fw-semibold px-3 mb-4" data-bs-toggle="modal"
                    data-bs-target="#modalEditarPerfil">
                    Editar perfil
                  </button>
                </div>
                <p class="mb-4">
                  <%=user_data.bio%>
                </p>
                <p class="text-muted small mb-3">
                  <img src="/icons/localizacao.png" alt="Localização" width="10" class="me-1">
                  <%=user_data.cidade%>, <%=user_data.estado%>
                </p>

                <div class="d-flex flex-wrap gap-2">
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- POSTS -->
        <div class="postagem bg-secondary bg-opacity-25 p-3 mb-3 rounded position-relative">

          <!-- Postagem 1 támbem post coringa -->
          <div class="flex-grow-1 overflow-auto bg-dark rounded p-3" style="max-height: 650px;">
            <% if (posts.length> 0) { %>
              <% posts.forEach(post=> { %>
                <!-- Postagem -->
                <div id="<%=post.id%>" class="postagem bg-secondary bg-opacity-25 p-3 mb-3 rounded position-relative">
                  <!-- Menu de três pontinhos -->
                  <div class="dropdown position-absolute top-0 end-0 mt-4 me-3">
                    <button class="btn btn-sm btn-secondary bg-opacity-25 border-0 text-white-50" type="button"
                      data-bs-toggle="dropdown" aria-expanded="false">
                      &#x22EE;
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li><a class="dropdown-item" onclick="deletarPost(<%=post.id%>)">DELETAR</a></li>
                    </ul>
                  </div>

                  <div class="mb-2">

                    <img src="<%=post.avatar_url || '/pictures/perfil.jpg'%>" alt="Foto de perfil"
                      class="rounded-circle me-3" width="50" height="50">
                    <strong>
                      <%= post.nome %>
                    </strong>
                    <p class="mb-1">
                      <%= post.cargo %>
                    </p>
                  </div>

                  <p>
                    <%= post.texto %>
                  </p>
                  <%if(post.imagem_url){%>
                    <img src="<%=post.imagem_url%>" class="object-fit-cover w-100 h-100">
                    <%}%>
                      <div class="d-flex justify-content-around text-white-50" style="margin-top: 2%;">
                        <div class="d-flex gap-5">
                          <button class="btn-invisible like-button" type="button">
                            <img src="/icons/curtida.png" alt="Curtir" width="20" height="20">
                            <span class="like-count">50</span>
                          </button>
                          <button class="btn-invisible">
                            <img src="/icons/comentario.png" alt="Comentários" width="20" height="20"> 11 comentários
                          </button>
                          <button class="btn-invisible">
                            <img src="/icons/compartilhar.png" alt="Compartilhar" width="20" height="20"> Compartilhar
                          </button>
                        </div>
                      </div>

                </div>

                <% }) %>
                  <% } %>

                    <div class="spinner-border invisible" role="status"
                      style="position:sticky; top: 50%;left: 50%;width: 3rem; height: 3rem; z-index: 1050;">
                      <span class="visually-hidden">Loading...</span>
                    </div>
          </div>
        </div>
      </main>

      <!-- Sidebar direita -->
      <aside class="col-lg-3 sidebar ms-3">
        <h5 class="d-flex align-items-center gap-2">
          <img src="/icons/minhaRedeW.png" alt="Minha rede" width="25.37" height="18.44">
          Minha rede
        </h5>
        <ul class="list-unstyled">
          <li class="mb-2">
            <a href="#" class="text-white text-decoration-none d-flex align-items-center gap-2">
              <img src="/icons/perfil.png" alt="Perfil" width="20" height="20">
              Professora Ermana Lopes
            </a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-white text-decoration-none d-flex align-items-center gap-2">
              <img src="/icons/perfil.png" alt="Perfil" width="20" height="20">
              Prof. Elmano
            </a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-white text-decoration-none d-flex align-items-center gap-2">
              <img src="/icons/perfil.png" alt="Perfil" width="20" height="20">
              Prof. Jarbas
            </a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-white text-decoration-none d-flex align-items-center gap-2">
              <img src="/icons/perfil.png" alt="Perfil" width="20" height="20">
              Professora Nilena
            </a>
          </li>
        </ul>

      </aside>

    </div>
  </div>

  <!-- Modal de Edição de Perfil -->
  <div class="modal fade" id="modalEditarPerfil" tabindex="-1" aria-labelledby="modalEditarPerfilLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-dark text-white rounded-4 shadow">
        <div class="modal-header border-0">
          <h5 class="modal-title" id="modalEditarPerfilLabel">Editar Perfil</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>

        <!-- Foto de perfil (clicável) -->
        <form id="formPerfil" class="p-4">
          <div class="text-center mb-4">
            <label for="inputPerfil" class="position-relative d-inline-block" style="cursor: pointer;">
              <img id="previewPerfil" src="/pictures/perfil.jpg"
                class="rounded-circle border border-3 border-white shadow" width="100" height="100"
                style="object-fit: cover;">
            </label>
            <input type="file" id="inputPerfil" name="image" accept="image/*" hidden>
          </div>

          <!-- Campos de edição -->
          <div class="mb-3">
            <input value="<%= user_data.nome %>" type="text" name="nome" class="form-control bg-light text-dark"
              placeholder="Nome" required>
          </div>
          <div class="mb-3">
            <textarea class="form-control bg-light text-dark" name="bio" rows="2" placeholder="Descrição"
              required><%= user_data.bio %></textarea>
          </div>
          <div class="mb-3">
            <input type="text" value="<%= user_data.cargo %>" name="cargo" class="form-control bg-light text-dark"
              placeholder="Cargo" required>
          </div>
          <div class="mb-3 row">
            <div class="col">
              <input type="text" value="<%= user_data.cidade %>" class="form-control bg-light text-dark" name="cidade"
                placeholder="Cidade" required>
            </div>
            <div class="col">
              <input type="text" value="<%= user_data.estado %>" class="form-control bg-light text-dark" name="estado"
                placeholder="Estado" required>
            </div>
          </div>

          <div class="modal-footer border-0">
            <button type="submit" class="btn btn-custom">Salvar alterações</button>
          </div>
        </form>
      </div>
    </div>
  </div>


  <script>
    // Atualiza o perfil do usuário
    document.getElementById("formPerfil").addEventListener("submit", async function (e) {
      e.preventDefault();

      const form = e.target;
      const formData = new FormData(form);
      const token = localStorage.getItem("authToken");

      try {
        const response = await fetch("<%=API%>/user/update", {
          method: "PUT",
          body: formData,
          headers: {
            Authorization: `Bearer ${token}`

          }
        });

        const data = await response.json();
        console.log(data);


        location.reload();
      } catch (error) {
        console.error(error);
        alert("Erro ao atualizar perfil.");
      }
    });
  </script>

  <!-- Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


  <script>
    // Espera o DOM carregar
    document.addEventListener('DOMContentLoaded', () => {
      const btnPublicar = document.getElementById('btnPublicar');
      const radios = document.querySelectorAll('input[name="destinoPublicacao"]');

      radios.forEach(radio => {
        radio.addEventListener('change', () => {
          if (radio.value === 'oportunidades' && radio.checked) {
            // Muda para laranja
            btnPublicar.classList.add('btn-publicar-oportunidades');
            btnPublicar.classList.remove('btn-custom');
          } else if (radio.value === 'feed' && radio.checked) {
            // Volta para roxo original
            btnPublicar.classList.add('btn-custom');
            btnPublicar.classList.remove('btn-publicar-oportunidades');
          }
        });
      });
    });
  </script>


</body>

</html>

<script>
  //Delatar um post
  async function deletarPost(postId) {
    try {
      token = localStorage.getItem("authToken");
      const response = await fetch(`<%=API%>/post/delete/${postId}`, {
        method: 'DELETE',
        headers: {
          "Authorization": `Bearer ${token}`
        }
      });

      if (response.status == 200) {
        document.getElementById(postId).style.display = "none";
      }

    } catch (error) {
      console.log(error)
    }
  };

</script>

<!-- Mostra a Imagem quando Edita o Perfil-->
<script>
  const inputImagem = document.getElementById('inputPerfil');
  const preview = document.getElementById('previewPerfil');

  inputImagem.addEventListener('change', function () {
    const file = this.files[0];
    if (file) {
      const leitor = new FileReader();
      leitor.onload = function (e) {
        preview.src = e.target.result;
      }
      leitor.readAsDataURL(file);
    }
  });
</script>