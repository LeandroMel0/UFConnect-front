      { autor: "João", texto: "O UFConnect é sensacional mesmo." },
      { autor: "Ana", texto: "Muito orgulho dos alunos!" }
    ];

    const listaComentarios = document.getElementById('listaComentarios');
    const formComentario = document.getElementById('formComentario');
    const novoComentarioInput = document.getElementById('novoComentario');

    // Função para atualizar a lista no modal
    function atualizarListaComentarios() {
      listaComentarios.innerHTML = ''; // limpa a lista
      comentarios.forEach((c) => {
        const li = document.createElement('li');
        li.classList.add('list-group-item');
        li.innerHTML = `<strong>${c.autor}:</strong> ${c.texto}`;
        listaComentarios.appendChild(li);
      });
    }

    // Quando o modal abrir, atualizar a lista
    const comentariosModal = document.getElementById('comentariosModal');
    comentariosModal.addEventListener('show.bs.modal', () => {
      atualizarListaComentarios();
    });

    // Ao enviar o formulário de comentário, adiciona novo comentário
    formComentario.addEventListener('submit', (e) => {
      e.preventDefault();

      const texto = novoComentarioInput.value.trim();
      if (texto) {
        comentarios.push({ autor: "Você", texto }); // autor fixo por exemplo
        novoComentarioInput.value = '';
        atualizarListaComentarios();
      }
    });
  </script>

